{% extends 'KitpagesRedirectBundle::layout.html.twig' %}

{% block main_content %}
<h1>Redirection list</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Source url</th>
            <th>Destination url</th>
            <th>Http code</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('redirection_show', { 'id': entity.id }) }}">{{ entity.sourceUrl }}</a></td>
            <td>{{ entity.destinationUrl }}</td>
            <td>{{ entity.httpCode }}</td>
            <td>
                <ul class="inline-actions">
                    <li>
                        <a href="{{ path('redirection_edit', { 'id': entity.id }) }}" class="btn btn-primary">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}